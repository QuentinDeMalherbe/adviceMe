  <br><br>
</div>

<div class="justify-content-center bg-light mt-0 pb-4" style="margin-top:-14px;">
  <h2 class="p-5" style="color:#000;">Pour les hommes (ou femmes) avides d'aventures ...</h2>

  <div class="container">
        <div class="cards grid">
        <% Vice.all.each do |vice| %>
          <div class="card" style="width: 18rem;">
            <%= cl_image_tag(vice.photo.key, class: "card-image") %>
            <div class="card-body">
              <%= cl_image_tag(vice.user.photo.key, class: 'avatar-large card-avatar') %>
              <h3 class="m-0" style="font-size: 14px; margin-top:20%;"><%= link_to vice.name, new_vice_conference_path(vice), class: 'text-success' %></h3>
              <div class="d-flex justify-content-between">
                <p class="card-text text-primary"><%= vice.category %></p>
                <div class="rating d-flex">
                  <%= image_tag('boobsSelect.png') %>
                  <%= image_tag('boobsSelect.png') %>
                  <%= image_tag('boobsSelect.png') %>
                  <%= image_tag('boobsUnselect.png') %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        </div>
  </div>
</div>

<div class="footer bg-dark">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github text-white"></i></a>
    <a href="#"><i class="fab fa-instagram text-white"></i></a>
    <a href="#"><i class="fab fa-facebook text-white"></i></a>
    <a href="#"><i class="fab fa-twitter text-white"></i></a>
    <a href="#"><i class="fab fa-linkedin text-white"></i></a>
  </div>
  <div class="footer-copyright">
    <%= image_tag 'logo.png', class: 'navbar-brand mr-auto p-2 bd-highlight' %>
  </div>
</div>

<script>

const navbar = document.getElementsByClassName('navbar')[0]
navbar.classList.add('bg-transparent')
const navlink = Array.from(document.querySelectorAll('a.nav-link')).slice(0,3)
navlink.forEach( (element) => element.classList.add('text-white'))


window.addEventListener('scroll', changeColor = () => {

  const banner = document.getElementsByClassName('banner')[0].offsetHeight - 150
  const navbar = document.getElementsByClassName('navbar')[0]
  const navlink = Array.from(document.querySelectorAll('a.nav-link')).slice(0,3)

  if (banner > window.scrollY) {
    navbar.classList.add('bg-transparent')
    navbar.classList.remove('shadow')
    navlink.forEach( (element) => element.classList.add('text-white'))
  } else {
    navbar.classList.remove('bg-transparent')
    navbar.classList.add('shadow')
    navlink.forEach( (element) => element.classList.remove('text-white'))
  }
});


</script>
