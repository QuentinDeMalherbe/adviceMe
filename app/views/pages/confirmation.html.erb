<div class="w-70">
  <h2 class="text-center mb-3">Ta réservation pour <%= @conference.vice.name %> a bien été prise en compte ... 😏</h2>

  <div class=" mt-5 bg-light text-dark">
    <div class="card-video">
      <%= cl_video_tag("video_g8emmz", width: 2500, crop: :crop,
    loop: true, autoplay: true, poster: false, class: 'video-loop')%>
    </div>
    <div class="card-reservation-information pt-3">
      <h2 style="text-transform: uppercase;" class="mb-4">Récapitulatif</h2>
      <div class="ml-5">
        <p>Prix : <%= @conference.vice.price %> €</p>
        <p>Organisateur : <%= @conference.user.first_name %> <%= @conference.user.last_name %> </p>
        <p>Adresse : <%= @conference.vice.address %></p>
        <p> Réservation pour le : <%= @conference.date.strftime('%A %d %B %Y') %> </p>
      </div>

      <div>
        <p><%= link_to 'Retour aux vices', vices_path, class: 'btn btn-primary w-50 mt-3' %></p>
        <p><%= link_to "Je peux finalement pas y aller", conference_path(@conference), method: :delete, data: { confirm: "Tu es sûr(e) de pas pouvoir venir?" }, class: 'text-decoration-none text-danger' %>
  </p>
      </div>
    </div>
  </div>
</div>




<style type="text/css">
  h2{font-weight: normal;}
</style>
