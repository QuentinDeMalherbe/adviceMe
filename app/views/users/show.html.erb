<div class="container flex-column align-items-center">
  <h1 class="text-center text-white">Mon profil</h1>
  <div class="w-100 text-center pb-3" style="position:relative;">
      <div><%= cl_image_tag current_user.photo.key, class: 'avatar-xxl text-center' %></div>
  </div>
    <ul class="nav nav-pills mb-3 w-100 d-flex justify-content-center" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Mes vices</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Mes conférences</a>
    </li>
  </ul>
  <div class='p-3' style="border: 2px solid white;">
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <%  if current_user.vices.empty? %>
        <p class="text-white">Vous n'avez pas encore créé de vices ...</p>
        <br>
        <%= link_to 'Retour à la liste des vices', vices_path %>
      <%  else %>
        <%= render 'vices/mesvices' %>
      <% end %>
    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <%= render 'conferences/index', user: @user %>
    </div>
  </div>
  </div>

</div>
