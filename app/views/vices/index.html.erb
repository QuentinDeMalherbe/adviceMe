
<div class="d-flex justify-content-between">
  <div>
    <h1 class="p-3">réserve ton vice bébé</h1>
    <div class="filtre p-1">
      <%= form_tag vices_index_path, method: :get do %>
      <div class="row">
        <div class="col">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control m-1",
            placeholder: "Cherche ton vice"
          %>
        </div>
        <div class="col">
            <%= submit_tag "Cherche", class: "btn btn-primary m-1" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="cards card-vice" style="margin-right:45%;margin-left: 5%; margin-top:2%;">
      <% @vices.each do |vice| %>
      <%= link_to vice_path(vice.id) do%>
        <div class="card m-0 h-100" style="background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)),
                      url('<%= cl_image_path(vice.photo.key) %>'); background-size: cover;">
          <div>

          </div>
          <div class="card-body p-3 text-left d-flex">
            <div class="mr-3">
              <%= cl_image_tag(vice.user.photo.key, class: 'avatar') %>
            </div>
            <div>
              <h3 class="m-0"><%= vice.name %></h3>
              <p class="card-text text-primary"><%= vice.category %></p>
            </div>
          </div>
        </div>
      <% end %>
      <% end %>
    </div>
  </div>

  <div
    id="map"
    class="m-0 ml-3"
    style="width: 40%;
    height: 100vh;
    right: 0px;
    top:20px;
    position:fixed;
    float:right;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

