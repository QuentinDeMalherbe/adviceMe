<div class="d-flex">

  <div class="cards card-vice" style="font-size">
    <% @vices.each do |vice| %>
    <!-- Ajouter helper link_to ici vers vice_path(@vice_id) -->
    <%= link_to vice_path(vice.id) do%>
    <div class="card m-0 h-100" style="background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)),
                  url('<%= cl_image_path(vice.photo.key) %>');">
      <div class="card-body p-3 text-left d-flex">
        <div class="pr-3">
          <%= cl_image_tag(vice.user.photo.key, class: 'avatar') %>
        </div>
        <div>
          <h3 class="m-0"><%= vice.name %></h3>
          <p class="card-text text-primary"><%= vice.category %></p>
        </div>
      </div>
    </div>
    <% end %>
    <!-- Ajouter end helper link_to ici -->
    <% end %>

    <div class="flex-shrink-3">
      <div
        id="map"
        class="m-0 position-fixed"
        style="width: 100%;
        height: 100vh;
        top:20px;
        float:right;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>

</div>
